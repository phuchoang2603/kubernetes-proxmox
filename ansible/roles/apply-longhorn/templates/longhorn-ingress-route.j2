apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: longhorn-ingressroute
  namespace: longhorn-system
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`longhorn.{{ ssl_local_domain }}`)
      kind: Rule
      services:
        - name: longhorn-frontend
          port: 80
